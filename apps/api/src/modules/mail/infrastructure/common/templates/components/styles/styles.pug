style.
  body {
    font-family: 'Apple SD Gothic Neo', sans-serif;
    color: #333;
    margin: 0;
    padding: 0;
    background-color: #f8f8f8;
  }
  .container {
    max-width: 465px;
    margin: 20px auto;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 20px;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  .header {
    display: flex;
    justify-content: space-between;
    padding: 20px 0;
    text-align: center;
  }
  .dots-container {
    display: flex;
    max-width: 250px;
    margin: 0 auto;
    justify-content: space-between;
    width: 100%;
    align-items: center;
  }
  .dots {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }
  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #4AA4FF;
  }
  .icon {
    display: block;
    margin: 8px auto;
    width: 32px;
    height: 32px;
  }
  .title {
    font-size: 16px;
    font-weight: normal;
    margin-top: 12px;
    text-align: center;
  }
  .help-text {
    font-size: 14px;
    color: #666;
    text-align: center;
    line-height: 1.5;
  }
  .code-block {
    background-color: #f5f5f7;
    padding: 28px 0;
    margin: 20px 0;
    text-align: center;
  }
  .code {
    font-size: 24px;
    font-weight: bold;
    letter-spacing: 8px;
  }
  .notice {
    text-align: center;
    font-size: 14px;
    color: #666;
    margin-top: 16px;
  }
  .security-notice {
    text-align: center;
    font-size: 13px;
    color: #666;
    margin-top: 24px;
  }
  .footer {
    margin-top: 20px;
    color: #666;
    font-size: 12px;
    text-align: center;
  }
