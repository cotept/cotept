include ../components/constants/constants

doctype html
html(lang="ko")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title [코테PT]
    //- 이메일 호환 스타일
    style.
      body {
        margin: 0;
        padding: 0;
        font-family: 'Apple SD Gothic Neo', 'Malgun Gothic', '맑은 고딕', Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        background-color: #f8f8f8;
      }
      table {
        border-collapse: collapse;
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
      }
      td {
        border-collapse: collapse;
      }
      a {
        text-decoration: none;
      }

  body(style="margin: 0; padding: 0; font-family: 'Apple SD Gothic Neo', 'Malgun Gothic', '맑은 고딕', Arial, sans-serif; background-color: #f8f8f8;")
    //- 메인 컨테이너 테이블
    table(width="100%" border="0" cellpadding="0" cellspacing="0" style="background-color: #f8f8f8; padding: 20px 0;")
      tr
        td(style="text-align: center;")
          //- 메일 콘텐츠 컨테이너
          table(width="465" border="0" cellpadding="0" cellspacing="0" style="max-width: 465px; margin: 0 auto; background-color: white; border: 1px solid #e5e5e5; border-radius: 8px;")
            tr
              td(style="padding: 20px;")
                //- 컨텐츠 영역
                block content
                
                //- 푸터
                table(width="100%" border="0" cellpadding="0" cellspacing="0" style="margin-top: 20px;")
                  tr
                    td(style="color: #666; font-size: 12px; text-align: center; padding-top: 20px; border-top: 1px solid #e5e5e5;")
                      | #{SERVICE_NAME} | #{DOMAIN_EMAIL_FROM}