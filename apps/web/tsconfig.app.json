{
  "extends": "./tsconfig.json",
  "include": ["src/**/*", "src/**/.server/**/*", "src/**/.client/**/*", "mocks"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": ["."],
    "paths": {
      "~/*": ["./src/*"],
      "~/mocks/*": ["./mocks/*"],
      "~/stories/*": ["./stories/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
