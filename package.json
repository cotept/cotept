{
  "name": "cotept",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:front": "turbo run dev --filter=front",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "dev:rambda": "turbo run dev --filter=rambda",
    "dev:docs": "turbo run dev --filter=docs",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "build:rambda": "turbo run build --filter=rambda",
    "build:docs": "turbo run build --filter=docs",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules && pnpm store prune",
    "infra:up": "docker-compose -f docker-compose.yml --env-file ./apps/api/.env --env-file ./apps/api/.env.local up -d",
    "infra:down": "docker-compose -f docker-compose.yml --env-file ./apps/api/.env --env-file ./apps/api/.env.local down -v",
    "infra:logs": "docker-compose -f docker-compose.yml --env-file ./apps/api/.env --env-file ./apps/api/.env.local logs -f",
    "infra:up:arm64": "docker-compose -f docker-compose.yml -f docker-compose.arm64.yml --env-file ./apps/api/.env --env-file ./apps/api/.env.local --env-file ./apps/api/.env.arm64 up -d",
    "infra:down:arm64": "docker-compose -f docker-compose.yml -f docker-compose.arm64.yml --env-file ./apps/api/.env --env-file ./apps/api/.env.local --env-file ./apps/api/.env.arm64 down -v",
    "infra:logs:arm64": "docker-compose -f docker-compose.yml -f docker-compose.arm64.yml --env-file ./apps/api/.env --env-file ./apps/api/.env.local --env-file ./apps/api/.env.arm64 logs -f",
    "openapi:export": "cd apps/api && cross-env NODE_ENV=local EXPORT_OPENAPI=true pnpm nest start",
    "openapi:generate": "cd packages/api-client && pnpm generate",
    "gen:api": "pnpm openapi:export && pnpm openapi:generate"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "chromatic": "^13.1.3",
    "cross-env": "^7.0.3",
    "eslint-plugin-storybook": "^9.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "storybook": "^8.6.14",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "uuid": "^11.0.5"
  }
}
